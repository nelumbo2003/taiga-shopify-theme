    <script>
      // OPTIMIZE THUMB SIZES 
      
      document.addEventListener("DOMContentLoaded", function () {
        const imageWrappers = document.querySelectorAll('.spf-product-card__image-wrapper img');
        imageWrappers.forEach(img => {
          if (!img.hasAttribute('loading')) {
            img.setAttribute('loading', 'lazy');
          }
        });

        document.querySelectorAll('.spf-product-card__image-wrapper img, .card--product img').forEach(img => {
          const updateUrl = (url) => {
            try {
              const parsedUrl = new URL(url, location.origin);
              const parts = parsedUrl.pathname.split('/');
              const filename = parts.pop();
        
              // Support modifiers AND no-modifier variants (.jpg, .webp, etc.)
              const match = filename.match(/^(.+?)(?:_[0-9]+x[0-9]+_crop_[a-z]+)?(\.(jpe?g|png|webp|gif))$/i);
        
              if (!match) return url;
        
              const baseName = match[1];
              const extension = match[2]; // includes the dot (e.g., .webp)
              const newFilename = `${baseName}_360x360_crop_center${extension}`;
        
              parts.push(newFilename);
              parsedUrl.pathname = parts.join('/');
              return parsedUrl.toString();
            } catch (e) {
              return url;
            }
          };
        
          // src
          if (img.src) {
            img.src = updateUrl(img.src);
          }
        
          // srcset
          if (img.srcset) {
            img.srcset = updateUrl(img.srcset.trim());
          }
        
          // data-srcset
          if (img.dataset && img.dataset.srcset) {
            img.dataset.srcset = updateUrl(img.dataset.srcset.trim());
          }
        });




      });

      

    </script>
