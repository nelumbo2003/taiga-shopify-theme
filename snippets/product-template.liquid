                  <div class="campaign-badge">
                    {{ images["weekendbee-logo-small.png"] | image_url: width: 24 | image_tag: class: 'badge-logo' }}
                    <span class="main-text">CLEARANCE SALE</span>
                    <span class="secondary-text">Hurry, popular products are selling out fast!</span>
                  </div>
