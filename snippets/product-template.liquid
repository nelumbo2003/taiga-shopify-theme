                          const selectedQuantity = parseInt(this.value, 10);
                          console.log(quantityInput);
                          quantityInput.value = selectedQuantity;
                        });
                      });
                  
                      // Make the whole box clickable
                      document.querySelectorAll('.quantity-box').forEach(box => {
