                {% if header_content contains 'preview-bar' or header_content contains 'preview bar' or content_for_header contains 'Shopify.designMode' %}
                {% if product.type == "Socks" and product.compare_at_price == blank %}
                  <div class="quantity-box-container">
                    <div class="quantity-box" id="box-1">
                      <input type="radio" name="quantity-selector" id="radio-1" value="1" checked="" wfd-id="id2">
